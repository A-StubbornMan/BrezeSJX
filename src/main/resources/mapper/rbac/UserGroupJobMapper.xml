<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.breze.mapper.rbac.UserGroupJobMapper">

    <select id="listUserGroupJobBOs" resultType="com.breze.entity.bo.UserGroupJobBO">
        SELECT
            user_id,
            group_id,
            job_id
        FROM
            sys_user_group_job ugj
                INNER JOIN sys_group_job gj ON ugj.group_job_id = gj.id
        WHERE
            user_id = #{userId}
    </select>
</mapper>
